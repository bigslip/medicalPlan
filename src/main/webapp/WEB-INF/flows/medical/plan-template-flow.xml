<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
       http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="base-flow" start-state="planTemplateSingleView">

    <!--    <secured match="any" attributes="ROLE_ADMIN"/>-->
    <input name="patient" value="flowScope.patient"/>

    <on-start>
        <set name="flowScope.formAction" value="planTemplateAction"/>
    </on-start>

    <view-state id="planTemplateSingleView" view="planTemplateSingleView" parent="base-flow#entitySingleView"
                model="planTemplate">
        <on-entry>
            <evaluate expression="formAction.setupForm"/>
        </on-entry>
        <transition on="save" to="saveEntity"/>
    </view-state>


</flow>